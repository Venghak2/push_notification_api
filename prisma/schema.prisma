generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  firstName      String   @db.VarChar(40)   @map("fist_name")
  lastName       String   @db.VarChar(40)   @map("last_name")
  username       String   @db.VarChar(40)
  email          String   @db.VarChar(40)
  password       String   @db.VarChar(225)
  rememberToken  String?  @db.VarChar(225)  @map("remember_token")
  roleId         Int?     @map("role_id")   
  role           Role?    @relation(fields: [roleId], references: [id])
  createdAt      DateTime @default(now())   @map("created_at")   @db.Timestamp(6)
  updatedAt      DateTime @default(now())   @map("updated_at")   @db.Timestamp(6)

}

model UserPasswordReset {
  id         Int      @id @default(autoincrement())
  email      String   @db.VarChar(40)
  token      String   @db.VarChar(225)
  createdAt  DateTime @default(now())   @map("created_at")   @db.Timestamp(6)
}

model Role {
  id          Int              @id @default(autoincrement())
  name        String           @db.VarChar(40)
  createdAt   DateTime         @default(now())   @map("created_at")   @db.Timestamp(6)
  updatedAt   DateTime         @default(now())   @map("updated_at")   @db.Timestamp(6)
  permissions RolePermission[]
  users       User[]
}

model Permission {
  id         Int              @id @default(autoincrement())
  name       String           @db.VarChar(40)
  type       String           @db.VarChar(40)
  createdAt  DateTime         @default(now())   @map("created_at")   @db.Timestamp(6)
  updatedAt  DateTime         @default(now())   @map("updated_at")   @db.Timestamp(6)
  roles      RolePermission[]
}

model RolePermission {
  id            Int        @id @default(autoincrement())
  roleId        Int        @map("role_id")
  permissionId  Int        @map("permission_id")
  createdAt     DateTime   @default(now())   @map("created_at")   @db.Timestamp(6)
  updatedAt     DateTime   @default(now())   @map("updated_at")   @db.Timestamp(6)
  role          Role       @relation(fields: [roleId], references: [id])
  permission    Permission @relation(fields: [permissionId], references: [id])
}

model Draft {
  id            Int               @id @default(autoincrement())
  campaignName  String            @db.VarChar(20)   @map("campaign_name")
  section       String            @db.VarChar(40)
  message       String            @db.VarChar(225)
  latestEdits   String            @db.VarChar(40)   @map("latest_edits")
  usergroup     String            @db.VarChar(40)
  equipment     String            @db.VarChar(40)
  managements   String            @db.VarChar(40)
  recipientType String            @db.VarChar(40)   @map("recipient_type")
  uploadImage   String            @db.VarChar(40)   @map("upload_image")
  uploadFile    String            @db.VarChar(40)   @map("upload_file")
  createdAt     DateTime          @default(now())   @map("created_at")   @db.Timestamp(6)
  updatedAt     DateTime          @default(now())   @map("updated_at")   @db.Timestamp(6)
  schedules     CampaignSchedule[]
  reports       CampaignReport[]
}

model CampaignSchedule {
  id           Int      @id @default(autoincrement())
  campaignId   Int      @map("campaign_id")
  type         String   @db.VarChar(40)
  datetimeSend DateTime @db.Timestamp(6)   @map("datetime_send")
  machine      String   @db.VarChar(45)
  status       String   @db.VarChar(45)
  createdAt    DateTime @default(now())   @map("created_at")   @db.Timestamp(6)
  updatedAt    DateTime @default(now())   @map("updated_at")   @db.Timestamp(6)
  campaign     Draft    @relation(fields: [campaignId], references: [id])
}

model CampaignReport {
  id                 Int      @id @default(autoincrement())
  campaignId         Int      @map("campaign_id")
  deliverySchedules  DateTime @db.Timestamp(6)   @map("delivery_schedules")
  players            String   @db.VarChar(45)
  credit             String   @db.VarChar(45)
  messageSendResults String   @db.VarChar(255)  @map("message_send_results")
  createdAt          DateTime @default(now())   @map("created_at")   @db.Timestamp(6)
  updatedAt          DateTime @default(now())   @map("updated_at")   @db.Timestamp(6)
  campaign           Draft    @relation(fields: [campaignId], references: [id])
}
